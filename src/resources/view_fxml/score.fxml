      xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ScoreController">

    <children>
        <ImageView fitHeight="70.0" fitWidth="100.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER">
            <image>
                <Image url="@../images/score.png" />
            </image>
        </ImageView>
        <Label fx:id="gameScoreView" contentDisplay="CENTER" prefHeight="70.0" prefWidth="100.0" text="0" textFill="RED">
            <font>
                <Font size="25.0" />
            </font>
        </Label>
    </children>
</HBox>
